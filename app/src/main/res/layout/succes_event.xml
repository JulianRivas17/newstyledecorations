<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79E8A9"
        android:orientation="vertical"
        android:padding="30dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="184dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/check_icon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Â¡EVENTO GUARDADO!"
            android:textAlignment="center"
            android:textColor="#5D5D5D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARA CONFIRMAR TU FIESTA COMUNICATE AL"
            android:textAlignment="center"
            android:textColor="#5D5D5D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:text="+54 (387) 444 7887"
            android:textAlignment="center"
            android:textColor="#5D5D5D"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_confirm_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_button_white"
            android:text="CONFIRMAR AHORA"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#5D5D5D"
            android:textSize="14sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_grey"
            android:text="VOLVER AL INICIO"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#5D5D5D"
            android:textSize="14sp"
            android:typeface="normal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="180dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>